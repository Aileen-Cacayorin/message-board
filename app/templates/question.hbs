<!-- question details, see question-details component template -->
{{question-details question=model}}

<!-- update question -->
{{update-question question=model saveUpdate='saveUpdate'}}

<!-- delete question button -->
<div class="container">
  <div class="row">
    <button {{action 'deleteQuestion' model}}>Delete this question</button>
  </div>
</div>

<!-- comments -->
<div class="container">
  <div class="row">
    <ul>
      {{#each model.answers as |answer-unit|}}
        {{answer-tile answer=answer-unit}}
      {{/each}}
    </ul>
  </div>
</div>

<!-- add comment -->
{{add-answer saveAnswer='saveAnswer' question=model}}

{{outlet}}
